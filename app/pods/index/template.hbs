<section class="content home">
  <div class="container-fluid">
    <div class="block-header">
      <h2>Home</h2>
    </div>
    <div class="row clearfix top-report">
       {{#home-statistics model=model}}{{/home-statistics}}
    </div>
    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card section-card">
          <div class="header">
            <h2>Daily Code Bytes</h2>
            <ul class="header-dropdown m-r--5">
              <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                <ul class="dropdown-menu pull-right">
                  {{#link-to 'practice' tagName="li"}}<a href="javascript:void(0);">Go to Daily code Bytes</a>{{/link-to}}
                </ul>
              </li>
            </ul>
          </div>
          <div class="body">
            <div class="row clearfix">
              {{#each model.dailyCBs as |dailyCB index|}}
                {{#problem-view dailycb=dailyCB link='practice.weekly-problem' problem=dailyCB.problem.content i=index}}{{/problem-view}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card section-card">
          <div class="header">
            <h2>Contests</h2>
            <ul class="header-dropdown m-r--5">
              <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="zmdi zmdi-more-vert"></i></a>
                <ul class="dropdown-menu pull-right">
                  {{#link-to 'contests' tagName="li"}}<a href="javascript:void(0);">Go to Contests</a>{{/link-to}}
                </ul>
              </li>
            </ul>
          </div>
          <div class="body">
            <div class="row clearfix">
              {{#if model.contests}}
                 {{#each model.contests as |contest|}}
                       {{#contest-view link='contests.contest' contest=contest}}{{/contest-view}}
                 {{/each}}
              {{else}}
                 <p class = "description-overlay">No Active Contests at the moment</p>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>